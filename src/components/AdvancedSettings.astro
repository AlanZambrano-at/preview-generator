---
import AdvancedIcon from "./AdvancedIcon.astro";

export interface Props {
  title?: string;
}

---

<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <div class="flex justify-end">
    <button id="advancedOpen">
      <AdvancedIcon />
    </button>
  </div>
  <div id="advancedMenu" class="hidden bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <label for="environment" class="block text-sm font-medium text-gray-700">Environment</label>
    <input id="environment" type="text" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
  </div>
</div>
<script>
  const buttons = document.querySelectorAll("button#advancedOpen");

  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      const menu = document.getElementById("advancedMenu");

      if (menu) {
        if (menu.classList.contains("hidden")) {
          menu.classList.replace("hidden", "block");
          return;
        }

        menu.classList.replace("block", "hidden");
      }
    });
  });
</script>
